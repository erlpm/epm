%% Sample provided by @tothlac
{plugins, [
    {epm_tidy_deps, ".*", {git, "https://github.com/tothlac/epm3-tidy-deps-plugin.git"}},
    {epm_alias, {git, "https://github.com/tsloughter/epm_alias.git"}},
    epm_appup_plugin
]}.

{deps, [
    {hackney, {git, "https://github.com/benoitc/hackney.git", {tag, "1.10.1"}}}
 ]}.


%% Make work despite compat issues with strings and warnings
{overrides, [
  {override, epm_appup_plugin, [
    {erl_opts, [
        {platform_define, "^19", brutal_purge_fixed},
        {platform_define, "^2", brutal_purge_fixed},
        %% warnings_as_errors,
        debug_info
    ]}
  ]}
]}.
